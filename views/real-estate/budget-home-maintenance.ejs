    <script id="search-functionality">
        document.addEventListener("DOMContentLoaded", function () {
            const searchInputs = document.querySelectorAll(
                'input[type="text"], input[type="email"]',
            );
            searchInputs.forEach((input) => {
                input.addEventListener("focus", function () {
                    this.parentElement.classList.add(
                        "ring-2",
                        "ring-primary",
                        "ring-opacity-50",
                    );
                });
                input.addEventListener("blur", function () {
                    this.parentElement.classList.remove(
                        "ring-2",
                        "ring-primary",
                        "ring-opacity-50",
                    );
                });
            });
        });
    </script>
    <script id="smooth-scroll">
        document.addEventListener("DOMContentLoaded", function () {
            const links = document.querySelectorAll('a[href^="#"]');
            links.forEach((link) => {
                link.addEventListener("click", function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute("href"));
                    if (target) {
                        target.scrollIntoView({
                            behavior: "smooth",
                            block: "start",
                        });
                    }
                });
            });
        });
    </script>
  
    <script>
        document.getElementById('emailForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Default form submission rokna

            const emailInput = document.getElementById('user_email');
            const userEmail = emailInput.value;
            const messageDiv = document.getElementById('message');

            // Message area ko clear karna
            messageDiv.textContent = 'Submitting...';
            messageDiv.className = '';

            // Data ko server (Node.js endpoint) par bhejna
            fetch('/submit-email', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ user_email: userEmail }), // Data ko JSON format mein bhejna
            })
                .then(response => response.json()) // Server response ko JSON mein convert karna
                .then(data => {
                    if (data.success) {
                        // Agar server ne success response diya
                        messageDiv.textContent = data.message;
                        messageDiv.className = 'success';
                        emailInput.value = ''; // Input field clear karna
                    } else {
                        // Agar server ne error response diya
                        messageDiv.textContent = data.message;
                        messageDiv.className = 'error';
                    }
                })
                .catch(error => {
                    // Agar network ya fetch mein koi error aayi
                    console.error('Network Error:', error);
                    messageDiv.textContent = 'Submission failed due to a network error.';
                    messageDiv.className = 'error';
                });
        });
    </script>
    <script id="scroll-animations">
        document.addEventListener("DOMContentLoaded", function () {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: "0px 0px -50px 0px",
            };
            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = "1";
                        entry.target.style.transform = "translateY(0)";
                    }
                });
            }, observerOptions);
            const animateElements = document.querySelectorAll(".bg-white");
            animateElements.forEach((el) => {
                el.style.opacity = "0";
                el.style.transform = "translateY(30px)";
                el.style.transition = "opacity 0.6s ease-out, transform 0.6s ease-out";
                observer.observe(el);
            });
        });
    </script>
