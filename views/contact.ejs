        <%- include("partials/footer") %>
            <script src="/js/script.js"></script>

            <script id="search-functionality">
                document.addEventListener("DOMContentLoaded", function () {
                    const searchInputs = document.querySelectorAll(
                        'input[type="text"], input[type="email"]',
                    );
                    searchInputs.forEach((input) => {
                        input.addEventListener("focus", function () {
                            this.parentElement.classList.add(
                                "ring-2",
                                "ring-primary",
                                "ring-opacity-50",
                            );
                        });
                        input.addEventListener("blur", function () {
                            this.parentElement.classList.remove(
                                "ring-2",
                                "ring-primary",
                                "ring-opacity-50",
                            );
                        });
                    });
                });
            </script>
            <script id="smooth-scroll">
                document.addEventListener("DOMContentLoaded", function () {
                    const links = document.querySelectorAll('a[href^="#"]');
                    links.forEach((link) => {
                        link.addEventListener("click", function (e) {
                            e.preventDefault();
                            const target = document.querySelector(this.getAttribute("href"));
                            if (target) {
                                target.scrollIntoView({
                                    behavior: "smooth",
                                    block: "start",
                                });
                            }
                        });
                    });
                });
            </script>

            <script id="newsletter-subscription">
                document.addEventListener("DOMContentLoaded", function () {
                    const subscribeButton = document.querySelector("section.bg-gray-900 button");
                    const emailInput = document.querySelector(
                        'section.bg-gray-900 input[type="email"]',
                    );
                    if (subscribeButton && emailInput) {
                        subscribeButton.addEventListener("click", function () {
                            const email = emailInput.value.trim();
                            if (email && email.includes("@")) {
                                const notification = document.createElement("div");
                                notification.className =
                                    "fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transform transition-all duration-300";
                                notification.textContent = "Thank you for subscribing!";
                                document.body.appendChild(notification);
                                setTimeout(() => {
                                    notification.style.transform = "translateX(400px)";
                                    setTimeout(() => document.body.removeChild(notification), 300);
                                }, 3000);
                                emailInput.value = "";
                            } else {
                                const notification = document.createElement("div");
                                notification.className =
                                    "fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transform transition-all duration-300";
                                notification.textContent = "Please enter a valid email address.";
                                document.body.appendChild(notification);
                                setTimeout(() => {
                                    notification.style.transform = "translateX(400px)";
                                    setTimeout(() => document.body.removeChild(notification), 300);
                                }, 3000);
                            }
                        });
                        emailInput.addEventListener("keypress", function (e) {
                            if (e.key === "Enter") {
                                subscribeButton.click();
                            }
                        });
                    }
                });
            </script>
            <script id="scroll-animations">
                document.addEventListener("DOMContentLoaded", function () {
                    const observerOptions = {
                        threshold: 0.1,
                        rootMargin: "0px 0px -50px 0px",
                    };
                    const observer = new IntersectionObserver((entries) => {
                        entries.forEach((entry) => {
                            if (entry.isIntersecting) {
                                entry.target.style.opacity = "1";
                                entry.target.style.transform = "translateY(0)";
                            }
                        });
                    }, observerOptions);
                    const animateElements = document.querySelectorAll(".bg-white");
                    animateElements.forEach((el) => {
                        el.style.opacity = "0";
                        el.style.transform = "translateY(30px)";
                        el.style.transition = "opacity 0.6s ease-out, transform 0.6s ease-out";
                        observer.observe(el);
                    });
                });
            </script>
            <script>
                document.getElementById('emailForm').addEventListener('submit', function (event) {
                    event.preventDefault(); // Default form submission rokna

                    const emailInput = document.getElementById('user_email');
                    const userEmail = emailInput.value;
                    const messageDiv = document.getElementById('message');

                    // Message area ko clear karna
                    messageDiv.textContent = 'Submitting...';
                    messageDiv.className = '';

                    // Data ko server (Node.js endpoint) par bhejna
                    fetch('/submit-email', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ user_email: userEmail }), // Data ko JSON format mein bhejna
                    })
                        .then(response => response.json()) // Server response ko JSON mein convert karna
                        .then(data => {
                            if (data.success) {
                                // Agar server ne success response diya
                                messageDiv.textContent = data.message;
                                messageDiv.className = 'success';
                                emailInput.value = ''; // Input field clear karna
                            } else {
                                // Agar server ne error response diya
                                messageDiv.textContent = data.message;
                                messageDiv.className = 'error';
                            }
                        })
                        .catch(error => {
                            // Agar network ya fetch mein koi error aayi
                            console.error('Network Error:', error);
                            messageDiv.textContent = 'Submission failed due to a network error.';
                            messageDiv.className = 'error';
                        });
                });
            </script>
            <script>
                // Contact Form Submission
                document.getElementById('contact-form').addEventListener('submit', function (event) {
                    event.preventDefault();

                    const form = this;
                    const submitBtn = form.querySelector('button[type="submit"]');
                    const submitText = document.getElementById('submit-text');
                    const submitIcon = document.getElementById('submit-icon');

                    // Get form values
                    const formData = {
                        name: document.getElementById('name').value,
                        email: document.getElementById('email').value,
                        phone: document.getElementById('phone').value,
                        subject: document.getElementById('subject').value,
                        message: document.getElementById('message').value
                    };

                    // Show loading state
                    submitText.textContent = 'Sending...';
                    submitIcon.className = 'ri-loader-4-line animate-spin';
                    submitBtn.disabled = true;

                    // Send data to server
                    fetch('/submit-contact', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(formData),
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                // Success notification
                                submitText.textContent = 'Message Sent!';
                                submitIcon.className = 'ri-check-line';
                                submitBtn.classList.remove('bg-primary', 'hover:bg-secondary');
                                submitBtn.classList.add('bg-green-500');

                                // Show success notification
                                const notification = document.createElement('div');
                                notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
                                notification.textContent = data.message;
                                document.body.appendChild(notification);

                                // Reset form after 2 seconds
                                setTimeout(() => {
                                    form.reset();
                                    document.getElementById('char-count').textContent = '0';
                                    submitText.textContent = 'Send Message';
                                    submitIcon.className = 'ri-send-plane-line';
                                    submitBtn.disabled = false;
                                    submitBtn.classList.add('bg-primary', 'hover:bg-secondary');
                                    submitBtn.classList.remove('bg-green-500');
                                    notification.remove();
                                }, 3000);
                            } else {
                                // Error state
                                submitText.textContent = 'Failed to Send';
                                submitIcon.className = 'ri-error-warning-line';
                                submitBtn.classList.remove('bg-primary', 'hover:bg-secondary');
                                submitBtn.classList.add('bg-red-500');

                                setTimeout(() => {
                                    submitText.textContent = 'Send Message';
                                    submitIcon.className = 'ri-send-plane-line';
                                    submitBtn.disabled = false;
                                    submitBtn.classList.add('bg-primary', 'hover:bg-secondary');
                                    submitBtn.classList.remove('bg-red-500');
                                }, 3000);
                            }
                        })
                        .catch(error => {
                            console.error('Network Error:', error);
                            submitText.textContent = 'Network Error';
                            submitIcon.className = 'ri-error-warning-line';
                            submitBtn.classList.remove('bg-primary', 'hover:bg-secondary');
                            submitBtn.classList.add('bg-red-500');

                            setTimeout(() => {
                                submitText.textContent = 'Send Message';
                                submitIcon.className = 'ri-send-plane-line';
                                submitBtn.disabled = false;
                                submitBtn.classList.add('bg-primary', 'hover:bg-secondary');
                                submitBtn.classList.remove('bg-red-500');
                            }, 3000);
                        });
                });

                // Character count for message textarea
                document.getElementById('message').addEventListener('input', function () {
                    document.getElementById('char-count').textContent = this.value.length;
                });
            </script>
