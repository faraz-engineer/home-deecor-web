                        );
                    } else if (this.querySelector(".ri-twitter-fill")) {
                        window.open(
                            `https://twitter.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`,
                            "_blank",
                            "width=600,height=400",
                        );
                    } else if (this.querySelector(".ri-pinterest-fill")) {
                        window.open(
